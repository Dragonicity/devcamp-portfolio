<div class="card" data-id="<%= portfolio_item.id %>">
  <img data-src="holder.js/100px280/thumb" alt="Card image cap">
  <%= image_tag portfolio_item.thumb_image, width: '100%' unless portfolio_item.thumb_image.nil? %>
  <p class="card-text">
  <span><%= link_to portfolio_item.title, portfolio_show_path(portfolio_item) %></span> <%=  portfolio_item.subtitle %>
  <%= link_to "Edit", edit_portfolio_path(portfolio_item) if logged_in?(:site_admin) %>
  <%= link_to 'Destroy', portfolio_path(portfolio_item), method: :delete, data: { confirm: 'Are you sure?' } if logged_in?(:site_admin) %>
</div>